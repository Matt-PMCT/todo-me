# Local environment overrides
# Copy this file to .env.local and customize values for your local setup

###> symfony/framework-bundle ###
# Generate a new secret with: php -r "echo bin2hex(random_bytes(16));"
APP_SECRET=your_generated_secret_here
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Customize database connection for local development
# DATABASE_URL="postgresql://todo_user:todo_password@localhost:5432/todo_db?serverVersion=15&charset=utf8"
###< doctrine/doctrine-bundle ###

###> redis ###
# Customize Redis connection for local development
# REDIS_URL="redis://localhost:6379"
###< redis ###

###> nelmio/cors-bundle ###
# Allow additional origins in local development
# CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
###< nelmio/cors-bundle ###

###> api configuration ###
# API token lifetime in hours (default: 48)
API_TOKEN_TTL_HOURS=48
###< api configuration ###

###> application metadata ###
# Application version for tracking and debugging
APP_VERSION=0.9.0
###< application metadata ###

###> sentry/sentry-symfony ###
# Sentry DSN for error tracking (production only)
# SENTRY_DSN="https://your-dsn@sentry.io/project-id"
###< sentry/sentry-symfony ###

###> Email Configuration ###
MAILER_DSN=smtp://localhost:1025
MAIL_FROM_ADDRESS=noreply@todo-me.local
MAIL_FROM_NAME="Todo App"
APP_URL=http://localhost:8080
###< Email Configuration ###
