{# Project Create Modal Component #}
{# Modal dialog for creating a new project #}

<div x-data="projectCreateModal({ projects: {{ sidebar_projects|default([])|json_encode }} })"
     @open-project-create-modal.window="open = true"
     @closeAll.window="open = false"
     @keydown.escape.window="open = false">

    {# Modal #}
    <div x-show="open"
         x-cloak
         class="fixed inset-0 z-50 overflow-y-auto"
         role="dialog"
         aria-modal="true"
         aria-labelledby="project-create-title">

        {# Backdrop #}
        <div x-show="open"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             @click="open = false"
             class="fixed inset-0 bg-gray-500 bg-opacity-75 dark:bg-gray-900/80 transition-opacity"
             aria-hidden="true"></div>

        {# Centering wrapper #}
        <div class="flex min-h-screen items-center justify-center p-4">

            {# Modal panel #}
            <div x-show="open"
                 x-transition:enter="ease-out duration-300"
                 x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave="ease-in duration-200"
                 x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 @click.away="open = false"
                 class="relative transform overflow-hidden rounded-lg bg-white dark:bg-gray-800 px-4 pb-4 pt-5 shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">

                {# Header #}
                <div class="flex items-center justify-between border-b border-gray-200 dark:border-gray-700 pb-4">
                    <h2 id="project-create-title" class="text-lg font-semibold text-gray-900 dark:text-gray-100">
                        New Project
                    </h2>
                    <button @click="open = false"
                            type="button"
                            class="rounded-md bg-white dark:bg-gray-800 text-gray-400 dark:text-gray-500 hover:text-gray-500 dark:hover:text-gray-400 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
                        <span class="sr-only">Close</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>

                {# Form #}
                <form method="POST" action="{{ path('app_project_create') }}" class="mt-4 space-y-4">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_project') }}" data-action="create_project">

                    {# Project Name #}
                    <div>
                        <label for="project-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               id="project-name"
                               name="name"
                               required
                               maxlength="100"
                               x-ref="nameInput"
                               x-init="$watch('open', value => { if(value) setTimeout(() => $refs.nameInput.focus(), 100) })"
                               class="mt-1 block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-teal-600 dark:focus:ring-teal-400 sm:text-sm sm:leading-6"
                               placeholder="Project name">
                    </div>

                    {# Description #}
                    <div>
                        <label for="project-description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Description
                        </label>
                        <textarea id="project-description"
                                  name="description"
                                  rows="2"
                                  maxlength="500"
                                  class="mt-1 block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-teal-600 dark:focus:ring-teal-400 sm:text-sm sm:leading-6"
                                  placeholder="Optional description"></textarea>
                    </div>

                    {# Parent Project #}
                    <div>
                        <label for="project-parent" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Parent Project
                        </label>
                        <select id="project-parent"
                                name="parentId"
                                class="mt-1 block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-gray-100 dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 focus:ring-2 focus:ring-inset focus:ring-teal-600 dark:focus:ring-teal-400 sm:text-sm sm:leading-6">
                            <option value="">No parent (root project)</option>
                            <template x-for="project in flattenedProjects" :key="project.id">
                                <option :value="project.id" x-text="project.indentedName"></option>
                            </template>
                        </select>
                    </div>

                    {# Color #}
                    <div>
                        <label for="project-color" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Color
                        </label>
                        <div class="mt-1 flex items-center gap-3">
                            <input type="color"
                                   id="project-color"
                                   name="color"
                                   x-model="selectedColor"
                                   class="h-8 w-8 rounded cursor-pointer border-0 p-0">
                            <div class="flex gap-2">
                                <template x-for="color in presetColors" :key="color">
                                    <button type="button"
                                            @click="selectedColor = color"
                                            :class="{ 'ring-2 ring-offset-2 ring-teal-500': selectedColor === color }"
                                            :style="'background-color: ' + color"
                                            class="h-6 w-6 rounded-full cursor-pointer border border-gray-200 dark:border-gray-600">
                                        <span class="sr-only" x-text="'Select color ' + color"></span>
                                    </button>
                                </template>
                            </div>
                        </div>
                    </div>

                    {# Submit buttons #}
                    <div class="mt-6 flex justify-end gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                        <button type="button"
                                @click="open = false"
                                class="rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600">
                            Cancel
                        </button>
                        <button type="submit"
                                class="rounded-md bg-teal-600 dark:bg-teal-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 dark:hover:bg-teal-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600">
                            Create Project
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('projectCreateModal', ({ projects }) => ({
        open: false,
        selectedColor: '#6366f1',
        presetColors: ['#6366f1', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#06b6d4'],

        get flattenedProjects() {
            const result = [];
            const flatten = (items, depth = 0) => {
                for (const item of items) {
                    result.push({
                        id: item.id,
                        name: item.name,
                        indentedName: '\u00A0\u00A0'.repeat(depth) + item.name
                    });
                    if (item.children && item.children.length > 0) {
                        flatten(item.children, depth + 1);
                    }
                }
            };
            flatten(projects || []);
            return result;
        }
    }));
});
</script>
