{# Filter panel component for task filtering #}
{# Expects: currentFilters (array), projects (array of Project), tags (array of Tag) #}

<div class="bg-white shadow rounded-lg p-4" x-data="{ showFilters: false }">
    <div class="flex items-center justify-between">
        <button @click="showFilters = !showFilters" type="button" class="min-h-11 inline-flex items-center gap-2 text-sm font-medium text-gray-700 hover:text-gray-900">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
            </svg>
            Filters
            <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': showFilters }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </button>

        {# Clear filters link #}
        {% if currentFilters.statuses is not empty or currentFilters.priority or currentFilters.projectId or currentFilters.tagIds is not empty or currentFilters.tagMode|default('any') != 'any' or currentFilters.isRecurring is not null %}
            <a href="{{ path(app.request.attributes.get('_route')) }}" class="text-sm text-indigo-600 hover:text-indigo-500">Clear filters</a>
        {% endif %}
    </div>

    <div x-show="showFilters" x-cloak x-transition class="mt-4 border-t pt-4">
        <form action="{{ path(app.request.attributes.get('_route')) }}" method="GET" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
            {# Status filter - multi-select checkboxes #}
            <fieldset>
                <legend class="block text-sm font-medium text-gray-700">Status</legend>
                <div class="mt-2 space-y-2">
                    {% for statusValue, statusLabel in {'pending': 'Pending', 'in_progress': 'In Progress', 'completed': 'Completed'} %}
                    <label class="flex items-center">
                        <input type="checkbox"
                               name="statuses[]"
                               value="{{ statusValue }}"
                               {% if statusValue in (currentFilters.statuses|default([])) %}checked{% endif %}
                               class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        <span class="ml-2 text-sm text-gray-700">{{ statusLabel }}</span>
                    </label>
                    {% endfor %}
                </div>
            </fieldset>

            {# Priority filter #}
            <div>
                <label for="filter_priority" class="block text-sm font-medium text-gray-700">Priority</label>
                <select name="priority" id="filter_priority" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                    <option value="">All priorities</option>
                    {% for i in 0..4 %}
                        <option value="{{ i }}" {% if currentFilters.priority is same as(i) %}selected{% endif %}>{{ i }} {% if i == 0 %}(Lowest){% elseif i == 4 %}(Highest){% endif %}</option>
                    {% endfor %}
                </select>
            </div>

            {# Project filter #}
            <div>
                <label for="filter_project" class="block text-sm font-medium text-gray-700">Project</label>
                <select name="projectId" id="filter_project" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                    <option value="">All projects</option>
                    {% for project in projects %}
                        <option value="{{ project.id }}" {% if currentFilters.projectId == project.id %}selected{% endif %}>{{ project.name }}</option>
                    {% endfor %}
                </select>
            </div>

            {# Recurring filter #}
            <div>
                <label for="filter_recurring" class="block text-sm font-medium text-gray-700">Recurring</label>
                <select name="isRecurring" id="filter_recurring" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                    <option value="">All tasks</option>
                    <option value="1" {% if currentFilters.isRecurring == true %}selected{% endif %}>Recurring only</option>
                    <option value="0" {% if currentFilters.isRecurring == false %}selected{% endif %}>Non-recurring only</option>
                </select>
            </div>

            {# Tag filter - multi-select checkboxes #}
            {% if tags is defined and tags is not empty %}
            <fieldset>
                <legend class="block text-sm font-medium text-gray-700">Tags</legend>
                <div class="mt-2 space-y-2 max-h-32 overflow-y-auto">
                    {% for tag in tags %}
                    <label class="flex items-center">
                        <input type="checkbox"
                               name="tagIds[]"
                               value="{{ tag.id }}"
                               {% if tag.id in (currentFilters.tagIds|default([])) %}checked{% endif %}
                               class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        <span class="ml-2 inline-flex items-center gap-1 text-sm text-gray-700">
                            <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                            </svg>
                            {{ tag.name }}
                        </span>
                    </label>
                    {% endfor %}
                </div>
                {# Tag mode selector (Any/All) #}
                <div class="mt-2 flex items-center gap-4 text-sm">
                    <label class="flex items-center">
                        <input type="radio" name="tagMode" value="any" {% if currentFilters.tagMode|default('any') == 'any' %}checked{% endif %} class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        <span class="ml-1.5 text-gray-600">Any tag</span>
                    </label>
                    <label class="flex items-center">
                        <input type="radio" name="tagMode" value="all" {% if currentFilters.tagMode|default('any') == 'all' %}checked{% endif %} class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        <span class="ml-1.5 text-gray-600">All tags</span>
                    </label>
                </div>
            </fieldset>
            {% endif %}

            {# Apply button #}
            <div class="flex items-end sm:col-span-2 lg:col-span-1">
                <button type="submit" class="w-full sm:w-auto min-h-11 inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Apply Filters
                </button>
            </div>
        </form>
    </div>
</div>
