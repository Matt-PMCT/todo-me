{# Project Edit Modal Component #}
{# Modal dialog for editing an existing project #}

<div x-data="projectEditModal()"
     @open-project-edit-modal.window="openModal($event.detail.projectId)"
     @closeAll.window="open = false"
     @keydown.escape.window="open = false">

    {# Modal #}
    <div x-show="open"
         x-cloak
         class="fixed inset-0 z-50 overflow-y-auto"
         role="dialog"
         aria-modal="true"
         aria-labelledby="project-edit-title">

        {# Backdrop #}
        <div x-show="open"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             @click="open = false"
             class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
             aria-hidden="true"></div>

        {# Centering wrapper #}
        <div class="flex min-h-screen items-center justify-center p-4">

            {# Modal panel #}
            <div x-show="open"
                 x-transition:enter="ease-out duration-300"
                 x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave="ease-in duration-200"
                 x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 @click.away="open = false"
                 class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">

                {# Loading state #}
                <div x-show="loading" class="flex items-center justify-center py-8">
                    <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>

                {# Error state #}
                <div x-show="error && !loading" class="rounded-md bg-red-50 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-red-800" x-text="error"></p>
                        </div>
                    </div>
                </div>

                {# Form content #}
                <div x-show="!loading && !error">
                    {# Header #}
                    <div class="flex items-center justify-between border-b border-gray-200 pb-4">
                        <h2 id="project-edit-title" class="text-lg font-semibold text-gray-900">
                            Edit Project
                        </h2>
                        <button @click="open = false"
                                type="button"
                                class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            <span class="sr-only">Close</span>
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>

                    {# Form #}
                    <form @submit.prevent="saveProject()" class="mt-4 space-y-4">
                        {# Project Name #}
                        <div>
                            <label for="project-edit-name" class="block text-sm font-medium text-gray-700">
                                Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   id="project-edit-name"
                                   x-model="form.name"
                                   required
                                   maxlength="100"
                                   x-ref="nameInput"
                                   class="mt-1 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                   placeholder="Project name">
                        </div>

                        {# Description #}
                        <div>
                            <label for="project-edit-description" class="block text-sm font-medium text-gray-700">
                                Description
                            </label>
                            <textarea id="project-edit-description"
                                      x-model="form.description"
                                      rows="2"
                                      maxlength="500"
                                      class="mt-1 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                                      placeholder="Optional description"></textarea>
                        </div>

                        {# Color #}
                        <div>
                            <label for="project-edit-color" class="block text-sm font-medium text-gray-700">
                                Color
                            </label>
                            <div class="mt-1 flex items-center gap-3">
                                <input type="color"
                                       id="project-edit-color"
                                       x-model="form.color"
                                       class="h-8 w-8 rounded cursor-pointer border-0 p-0">
                                <div class="flex gap-2">
                                    <template x-for="color in presetColors" :key="color">
                                        <button type="button"
                                                @click="form.color = color"
                                                :class="{ 'ring-2 ring-offset-2 ring-indigo-500': form.color === color }"
                                                :style="'background-color: ' + color"
                                                class="h-6 w-6 rounded-full cursor-pointer border border-gray-200">
                                            <span class="sr-only" x-text="'Select color ' + color"></span>
                                        </button>
                                    </template>
                                </div>
                            </div>
                        </div>

                        {# Submit buttons #}
                        <div class="mt-6 flex justify-end gap-3 pt-4 border-t border-gray-200">
                            <button type="button"
                                    @click="open = false"
                                    class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                Cancel
                            </button>
                            <button type="submit"
                                    :disabled="saving"
                                    class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:opacity-50 disabled:cursor-not-allowed">
                                <span x-show="!saving">Save Changes</span>
                                <span x-show="saving">Saving...</span>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('projectEditModal', () => ({
        open: false,
        loading: false,
        saving: false,
        error: null,
        projectId: null,
        presetColors: ['#6366f1', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#06b6d4'],
        form: {
            name: '',
            description: '',
            color: '#6366f1'
        },

        async openModal(projectId) {
            this.projectId = projectId;
            this.open = true;
            this.loading = true;
            this.error = null;
            this.form = { name: '', description: '', color: '#6366f1' };

            try {
                const response = await window.api.get('/api/v1/projects/' + projectId);
                if (!response.ok) {
                    throw new Error('Failed to load project');
                }
                const data = await response.json();
                const project = data.data;

                this.form.name = project.name || '';
                this.form.description = project.description || '';
                this.form.color = project.color || '#6366f1';

                this.$nextTick(() => {
                    if (this.$refs.nameInput) {
                        this.$refs.nameInput.focus();
                    }
                });
            } catch (err) {
                this.error = err.message || 'Failed to load project';
            } finally {
                this.loading = false;
            }
        },

        async saveProject() {
            if (!this.form.name.trim()) {
                return;
            }

            this.saving = true;
            this.error = null;

            try {
                const response = await window.api.patch('/api/v1/projects/' + this.projectId, {
                    name: this.form.name.trim(),
                    description: this.form.description?.trim() || null,
                    color: this.form.color
                });

                if (!response.ok) {
                    const data = await response.json();
                    throw new Error(data.error?.message || 'Failed to update project');
                }

                this.open = false;

                // Show success toast
                if (window.showToast) {
                    window.showToast('Project updated successfully', 'success');
                }

                // Reload the page to show updated project data
                window.location.reload();
            } catch (err) {
                this.error = err.message || 'Failed to update project';
            } finally {
                this.saving = false;
            }
        }
    }));
});
</script>
