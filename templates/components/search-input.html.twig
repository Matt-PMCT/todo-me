{# Search Input Component #}
{# Provides global search functionality with keyboard navigation and dropdown results #}

<div x-data="searchComponent()" @keydown.escape="close()" @click.away="close()" class="relative">
    <div class="relative">
        <input
            type="text"
            x-ref="searchInput"
            x-model="query"
            @input.debounce.300ms="search()"
            @keydown.arrow-down.prevent="navigateDown()"
            @keydown.arrow-up.prevent="navigateUp()"
            @keydown.enter.prevent="selectCurrent()"
            @focus="open = true"
            placeholder="Search tasks, projects, tags..."
            aria-label="Search tasks, projects, and tags"
            class="w-full rounded-md border-0 bg-white py-2 pl-10 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
        >
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
            </svg>
        </div>
        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <kbd class="hidden sm:inline-flex items-center rounded border border-gray-200 px-1.5 font-sans text-xs text-gray-400">/</kbd>
        </div>
    </div>

    <!-- Dropdown Results -->
    <div x-show="open && (results.tasks.length > 0 || results.projects.length > 0 || results.tags.length > 0 || loading)"
         x-cloak
         x-transition:enter="transition ease-out duration-100"
         x-transition:enter-start="transform opacity-0 scale-95"
         x-transition:enter-end="transform opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75"
         x-transition:leave-start="transform opacity-100 scale-100"
         x-transition:leave-end="transform opacity-0 scale-95"
         class="absolute z-10 mt-1 max-h-80 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm">

        <!-- Loading state -->
        <div x-show="loading" class="px-4 py-2 text-sm text-gray-500">
            Searching...
        </div>

        <!-- Tasks -->
        <template x-if="results.tasks.length > 0">
            <div>
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50">Tasks</div>
                <template x-for="(task, index) in results.tasks" :key="task.id">
                    <a :href="window.routes.taskList + '/' + task.id"
                       @mouseenter="selectedIndex = index"
                       :class="{ 'bg-indigo-50': selectedIndex === index }"
                       class="block px-4 py-2 cursor-pointer hover:bg-gray-50">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-900" x-html="task.titleHighlight || task.title"></span>
                            <span class="text-xs px-2 py-0.5 rounded-full"
                                  :class="{
                                      'bg-yellow-100 text-yellow-800': task.status === 'pending',
                                      'bg-blue-100 text-blue-800': task.status === 'in_progress',
                                      'bg-green-100 text-green-800': task.status === 'completed'
                                  }"
                                  x-text="task.status.replace('_', ' ')"></span>
                        </div>
                        <div x-show="task.projectName" class="text-xs text-gray-500 mt-0.5" x-text="task.projectName"></div>
                    </a>
                </template>
            </div>
        </template>

        <!-- Projects -->
        <template x-if="results.projects.length > 0">
            <div>
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50">Projects</div>
                <template x-for="(project, index) in results.projects" :key="project.id">
                    <a :href="window.routes.taskList + '?projectId=' + project.id"
                       @mouseenter="selectedIndex = results.tasks.length + index"
                       :class="{ 'bg-indigo-50': selectedIndex === results.tasks.length + index }"
                       class="block px-4 py-2 cursor-pointer hover:bg-gray-50">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full mr-2" :style="{ backgroundColor: project.color || '#6366f1' }"></span>
                            <span class="text-sm text-gray-900" x-text="project.name"></span>
                        </div>
                    </a>
                </template>
            </div>
        </template>

        <!-- Tags -->
        <template x-if="results.tags.length > 0">
            <div>
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider bg-gray-50">Tags</div>
                <template x-for="(tag, index) in results.tags" :key="tag.id">
                    <a :href="window.routes.taskList + '?tagIds[]=' + tag.id"
                       @mouseenter="selectedIndex = results.tasks.length + results.projects.length + index"
                       :class="{ 'bg-indigo-50': selectedIndex === results.tasks.length + results.projects.length + index }"
                       class="block px-4 py-2 cursor-pointer hover:bg-gray-50">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full mr-2" :style="{ backgroundColor: tag.color || '#6b7280' }"></span>
                            <span class="text-sm text-gray-900" x-text="tag.name"></span>
                        </div>
                    </a>
                </template>
            </div>
        </template>

        <!-- No results -->
        <div x-show="!loading && query.length >= 2 && results.tasks.length === 0 && results.projects.length === 0 && results.tags.length === 0"
             class="px-4 py-2 text-sm text-gray-500">
            No results found
        </div>
    </div>
</div>
