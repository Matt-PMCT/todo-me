{# Quick Add Component - Natural language task entry with real-time parsing #}
{# Uses session-based authentication via window.api #}

<div class="relative"
     x-data="quickAdd()"
     @keydown.escape="clearInput()">

    {# Input container with highlight overlay #}
    <div class="relative flex flex-col sm:flex-row gap-3 sm:gap-4">
        <div class="flex-1 relative">
            {# Highlight overlay (behind input) - Issue #33: must match input styling exactly #}
            <div class="absolute inset-0 py-3 sm:py-2 px-3 pointer-events-none overflow-hidden text-transparent text-base sm:text-sm sm:leading-6"
                 aria-hidden="true">
                <span x-html="highlightedText"></span>
            </div>

            {# Issue #37: Replaced input with textarea for multi-line support #}
            {# Enter = newline, Shift+Enter or Ctrl+Enter = submit #}
            <textarea
                   id="quick-add-input"
                   x-ref="input"
                   x-model="inputText"
                   @input.debounce.150ms="parseInput(); autoGrow($event.target)"
                   @keydown.enter="handleEnterKey($event)"
                   @keydown.arrow-down.prevent="navigateAutocomplete('down')"
                   @keydown.arrow-up.prevent="navigateAutocomplete('up')"
                   @keydown.tab.prevent="selectAutocompleteItem()"
                   placeholder="What needs to be done? Try: 'Review proposal #work @urgent tomorrow p3' (Shift+Enter to submit)"
                   rows="1"
                   class="block w-full rounded-md border-0 py-3 sm:py-2 px-3 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-teal-600 dark:focus:ring-teal-400 text-base sm:text-sm sm:leading-6 bg-transparent relative z-10 caret-gray-900 dark:caret-gray-100 resize-none overflow-hidden"
                   :class="{ 'ring-red-300 focus:ring-red-500': hasErrors }"
                   autocomplete="off"
                   spellcheck="false"></textarea>
        </div>

        {# Issue #36: Redesigned recurring controls with icon button #}
        <div class="flex items-center gap-2">
            {# Recurring toggle button #}
            <button type="button"
                    @click="isRecurring = !isRecurring"
                    :class="isRecurring ? 'bg-teal-100 dark:bg-teal-900/30 text-teal-700 dark:text-teal-400 ring-teal-200 dark:ring-teal-700' : 'bg-gray-50 dark:bg-gray-700 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-600 ring-gray-200 dark:ring-gray-600'"
                    class="min-h-11 min-w-11 sm:min-h-0 sm:min-w-0 p-2 rounded-md ring-1 ring-inset transition-colors"
                    :title="isRecurring ? 'Disable recurring' : 'Make recurring'"
                    :aria-pressed="isRecurring">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span class="sr-only" x-text="isRecurring ? 'Disable recurring' : 'Make recurring'"></span>
            </button>

            {# Submit button #}
            <button type="button"
                    @click="submitTask()"
                    :disabled="isSubmitting || !inputText.trim()"
                    class="min-h-11 w-full sm:w-auto inline-flex items-center justify-center gap-2 rounded-md bg-teal-600 dark:bg-teal-500 px-4 py-3 sm:py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-500 dark:hover:bg-teal-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600 disabled:opacity-50 disabled:cursor-not-allowed">
                <template x-if="isSubmitting">
                    <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </template>
                <template x-if="!isSubmitting">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </template>
                <span x-text="isSubmitting ? 'Adding...' : 'Add Task'"></span>
            </button>
        </div>
    </div>

    {# Issue #36: Progressive disclosure - recurrence input only shows when enabled #}
    <div x-show="isRecurring" x-cloak x-transition class="mt-3">
        <input type="text"
               x-model="recurrenceRule"
               placeholder="e.g., every day, every Monday, every 2 weeks, every! 3 days"
               class="block w-full rounded-md border-0 py-2.5 sm:py-1.5 px-3 text-sm text-gray-900 dark:text-gray-100 dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-teal-600 dark:focus:ring-teal-400">
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Use "every!" for strict recurring (starts from completion date)</p>
    </div>

    {# Autocomplete dropdown #}
    <div x-show="showAutocomplete && autocompleteItems.length > 0"
         x-cloak
         x-transition:enter="transition ease-out duration-100"
         x-transition:enter-start="transform opacity-0 scale-95"
         x-transition:enter-end="transform opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75"
         x-transition:leave-start="transform opacity-100 scale-100"
         x-transition:leave-end="transform opacity-0 scale-95"
         @click.away="showAutocomplete = false"
         class="absolute z-20 mt-1 w-full max-w-md bg-white dark:bg-gray-800 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 dark:ring-gray-700 py-1 max-h-60 overflow-auto">
        <div class="px-3 py-1.5 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b dark:border-gray-700"
             x-text="autocompleteType === 'project' ? 'Projects' : 'Tags'"></div>
        <template x-for="(item, index) in autocompleteItems" :key="item.id">
            <button type="button"
                    @click="insertAutocompleteItem(item)"
                    @mouseenter="autocompleteIndex = index"
                    :class="{ 'bg-teal-50 dark:bg-teal-900/30': autocompleteIndex === index }"
                    class="block w-full text-left px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                <span class="flex items-center gap-2">
                    <template x-if="autocompleteType === 'project'">
                        <svg class="w-4 h-4 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                        </svg>
                    </template>
                    <template x-if="autocompleteType === 'tag'">
                        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                    </template>
                    <span x-text="item.name"></span>
                    <template x-if="item.fullPath && item.fullPath !== item.name">
                        <span class="text-xs text-gray-400" x-text="'(' + item.fullPath + ')'"></span>
                    </template>
                </span>
            </button>
        </template>
    </div>

    {# Parsed preview with removable tokens #}
    <div x-show="parsedData && (parsedData.project || parsedData.due_date || parsedData.tags?.length || parsedData.priority !== null)"
         x-cloak
         class="mt-2 flex flex-wrap items-center gap-2">
        <span class="text-xs text-gray-500 dark:text-gray-400">Parsed:</span>

        {# Due date token #}
        <template x-if="parsedData?.due_date">
            <span class="inline-flex items-center gap-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded px-2 py-0.5 text-xs">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span x-text="formatDate(parsedData.due_date)"></span>
                <button type="button" @click="removeToken('date')" class="ml-1 hover:text-blue-900">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </span>
        </template>

        {# Project token #}
        <template x-if="parsedData?.project">
            <span class="inline-flex items-center gap-1 bg-teal-50 dark:bg-teal-900/30 text-teal-600 dark:text-teal-400 rounded-full px-2 py-0.5 text-xs">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                </svg>
                <span x-text="parsedData.project.name"></span>
                <button type="button" @click="removeToken('project')" class="ml-1 hover:text-teal-900">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </span>
        </template>

        {# Tag tokens #}
        <template x-for="tag in (parsedData?.tags || [])" :key="tag.id">
            <span class="inline-flex items-center gap-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full px-2 py-0.5 text-xs">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <span x-text="tag.name"></span>
                <button type="button" @click="removeToken('tag', tag.id)" class="ml-1 hover:text-gray-900">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </span>
        </template>

        {# Priority token #}
        <template x-if="parsedData?.priority !== null && parsedData?.priority !== undefined">
            <span class="inline-flex items-center gap-1 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300 rounded px-2 py-0.5 text-xs">
                <span x-text="'p' + parsedData.priority"></span>
                <button type="button" @click="removeToken('priority')" class="ml-1 hover:text-yellow-900">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </span>
        </template>
    </div>

    {# Warnings #}
    <div x-show="parsedData?.warnings?.length > 0"
         x-cloak
         class="mt-2">
        <template x-for="warning in (parsedData?.warnings || [])" :key="warning">
            <p class="text-xs text-yellow-600 dark:text-yellow-400 flex items-center gap-1">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                <span x-text="warning"></span>
            </p>
        </template>
    </div>

    {# Error message #}
    <div x-show="errorMessage"
         x-cloak
         class="mt-2">
        <p class="text-xs text-red-600 dark:text-red-400 flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"></path>
            </svg>
            <span x-text="errorMessage"></span>
        </p>
    </div>

    {# Success message #}
    <div x-show="successMessage"
         x-cloak
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 transform -translate-y-2"
         x-transition:enter-end="opacity-100 transform translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0"
         class="mt-2">
        <p class="text-xs text-green-600 dark:text-green-400 flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>
            </svg>
            <span x-text="successMessage"></span>
        </p>
    </div>
</div>

<script>
function quickAdd() {
    return {
        inputText: '',
        parsedData: null,
        highlightedText: '',
        isSubmitting: false,
        isParsing: false,
        showAutocomplete: false,
        autocompleteItems: [],
        autocompleteIndex: 0,
        autocompleteType: null,
        autocompleteQuery: '',
        autocompleteStartPos: 0,
        errorMessage: '',
        successMessage: '',
        parseTimeout: null,
        hasErrors: false,
        isRecurring: false,
        recurrenceRule: '',

        init() {
            this.$watch('inputText', () => {
                this.checkForAutocomplete();
            });
        },

        // Issue #37: Handle Enter key - Shift+Enter or Ctrl+Enter submits, plain Enter adds newline
        handleEnterKey(event) {
            if (event.shiftKey || event.ctrlKey || event.metaKey) {
                event.preventDefault();
                this.submitTask();
            }
            // Plain Enter allows newline (default textarea behavior)
        },

        // Issue #37: Auto-grow textarea to fit content
        autoGrow(element) {
            element.style.height = 'auto';
            element.style.height = Math.min(element.scrollHeight, 150) + 'px';
        },

        async parseInput() {
            if (!this.inputText.trim()) {
                this.parsedData = null;
                this.highlightedText = '';
                return;
            }

            this.isParsing = true;

            try {
                const response = await window.api.post('/api/v1/parse', { input: this.inputText });

                if (!response.ok) {
                    throw new Error('Parse request failed');
                }

                const result = await response.json();

                if (result.success && result.data) {
                    this.parsedData = result.data;
                    this.updateHighlights();
                    this.hasErrors = false;
                }
            } catch (error) {
                console.error('Parse error:', error);
                this.highlightedText = this.escapeHtml(this.inputText);
            } finally {
                this.isParsing = false;
            }
        },

        updateHighlights() {
            if (!this.parsedData?.highlights || this.parsedData.highlights.length === 0) {
                this.highlightedText = this.escapeHtml(this.inputText);
                return;
            }

            // Sort highlights by start position
            const highlights = [...this.parsedData.highlights].sort((a, b) => a.start - b.start);

            let result = '';
            let lastEnd = 0;

            for (const h of highlights) {
                // Add text before this highlight
                if (h.start > lastEnd) {
                    result += this.escapeHtml(this.inputText.substring(lastEnd, h.start));
                }

                // Add highlighted text
                const highlightClass = this.getHighlightClass(h.type, h.valid);
                const text = this.escapeHtml(this.inputText.substring(h.start, h.end));
                result += `<span class="${highlightClass}">${text}</span>`;

                lastEnd = h.end;
            }

            // Add remaining text
            if (lastEnd < this.inputText.length) {
                result += this.escapeHtml(this.inputText.substring(lastEnd));
            }

            this.highlightedText = result;
        },

        getHighlightClass(type, valid = true) {
            // Text must stay transparent (inherited from parent) - only background colors
            // Use colors that work in both light and dark modes
            const isDark = document.documentElement.classList.contains('dark');

            if (!valid) {
                return isDark ? 'border-b-2 border-red-500' : 'border-b-2 border-red-400';
            }

            switch (type) {
                case 'date':
                    return isDark ? 'bg-blue-500/20 rounded-sm' : 'bg-blue-100 rounded-sm';
                case 'project':
                    return isDark ? 'bg-teal-500/20 rounded-sm' : 'bg-teal-100 rounded-sm';
                case 'tag':
                    return isDark ? 'bg-gray-500/30 rounded-sm' : 'bg-gray-200 rounded-sm';
                case 'priority':
                    return isDark ? 'bg-yellow-500/20 rounded-sm' : 'bg-yellow-100 rounded-sm';
                default:
                    return '';
            }
        },

        escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        },

        formatDate(dateStr) {
            if (!dateStr) return '';
            try {
                const date = new Date(dateStr);
                return date.toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: date.getFullYear() !== new Date().getFullYear() ? 'numeric' : undefined
                });
            } catch {
                return dateStr;
            }
        },

        checkForAutocomplete() {
            const input = this.$refs.input;
            const cursorPos = input.selectionStart;
            const textBeforeCursor = this.inputText.substring(0, cursorPos);

            // Check for project autocomplete (#)
            const projectMatch = textBeforeCursor.match(/#([a-zA-Z0-9_/-]*)$/);
            if (projectMatch) {
                this.autocompleteType = 'project';
                this.autocompleteQuery = projectMatch[1];
                this.autocompleteStartPos = cursorPos - projectMatch[0].length;
                this.fetchAutocomplete();
                return;
            }

            // Check for tag autocomplete (@)
            const tagMatch = textBeforeCursor.match(/@([a-zA-Z0-9_-]*)$/);
            if (tagMatch) {
                this.autocompleteType = 'tag';
                this.autocompleteQuery = tagMatch[1];
                this.autocompleteStartPos = cursorPos - tagMatch[0].length;
                this.fetchAutocomplete();
                return;
            }

            // No autocomplete trigger found
            this.showAutocomplete = false;
            this.autocompleteItems = [];
        },

        async fetchAutocomplete() {
            try {
                const endpoint = this.autocompleteType === 'project'
                    ? '/api/v1/autocomplete/projects'
                    : '/api/v1/autocomplete/tags';

                const response = await window.api.get(`${endpoint}?q=${encodeURIComponent(this.autocompleteQuery)}`);

                if (!response.ok) {
                    throw new Error('Autocomplete request failed');
                }

                const result = await response.json();

                if (result.success && result.data) {
                    this.autocompleteItems = result.data.items;
                    this.autocompleteIndex = 0;
                    this.showAutocomplete = this.autocompleteItems.length > 0;
                }
            } catch (error) {
                console.error('Autocomplete error:', error);
                this.showAutocomplete = false;
            }
        },

        navigateAutocomplete(direction) {
            if (!this.showAutocomplete || this.autocompleteItems.length === 0) {
                return;
            }

            if (direction === 'down') {
                this.autocompleteIndex = (this.autocompleteIndex + 1) % this.autocompleteItems.length;
            } else {
                this.autocompleteIndex = (this.autocompleteIndex - 1 + this.autocompleteItems.length) % this.autocompleteItems.length;
            }
        },

        selectAutocompleteItem() {
            if (!this.showAutocomplete || this.autocompleteItems.length === 0) {
                return;
            }

            this.insertAutocompleteItem(this.autocompleteItems[this.autocompleteIndex]);
        },

        insertAutocompleteItem(item) {
            const prefix = this.autocompleteType === 'project' ? '#' : '@';
            const insertText = prefix + (item.fullPath || item.name);

            // Replace the partial text with the full item
            const before = this.inputText.substring(0, this.autocompleteStartPos);
            const after = this.inputText.substring(this.$refs.input.selectionStart);

            this.inputText = before + insertText + ' ' + after.trimStart();

            this.showAutocomplete = false;
            this.autocompleteItems = [];

            // Trigger parse after insertion
            this.$nextTick(() => {
                this.$refs.input.focus();
                const newPos = before.length + insertText.length + 1;
                this.$refs.input.setSelectionRange(newPos, newPos);
                this.parseInput();
            });
        },

        removeToken(type, tagId = null) {
            if (!this.parsedData?.highlights) return;

            // Find the highlight to remove
            let highlightToRemove = null;

            if (type === 'tag' && tagId) {
                // Find tag by matching the text
                const tag = this.parsedData.tags?.find(t => t.id === tagId);
                if (tag) {
                    highlightToRemove = this.parsedData.highlights.find(h =>
                        h.type === 'tag' && h.text.toLowerCase().includes(tag.name.toLowerCase())
                    );
                }
            } else {
                highlightToRemove = this.parsedData.highlights.find(h => h.type === type);
            }

            if (highlightToRemove) {
                // Remove the text from input
                const before = this.inputText.substring(0, highlightToRemove.start);
                const after = this.inputText.substring(highlightToRemove.end);
                this.inputText = (before + after).replace(/\s+/g, ' ').trim();

                // Re-parse
                this.parseInput();
            }
        },

        async submitTask() {
            if (!this.inputText.trim()) {
                return;
            }

            this.isSubmitting = true;
            this.errorMessage = '';
            this.successMessage = '';

            try {
                // Use API endpoint for natural language task creation
                const requestBody = { input_text: this.inputText };

                // Add recurrence if enabled
                if (this.isRecurring && this.recurrenceRule.trim()) {
                    requestBody.isRecurring = true;
                    requestBody.recurrenceRule = this.recurrenceRule.trim();
                }

                const response = await window.api.post('/api/v1/tasks?parse_natural_language=true', requestBody);

                const result = await response.json();

                if (!response.ok) {
                    throw new Error(result.error?.message || 'Failed to create task');
                }

                if (result.success) {
                    const taskTitle = result.data.title || 'Task';
                    const taskId = result.data.id;
                    this.clearInput();

                    // Issue #32: AJAX task insertion without page reload
                    const taskList = document.querySelector('[data-task-list]');
                    const emptyState = document.querySelector('[data-empty-state]');

                    if (taskList && taskId) {
                        try {
                            // Fetch the rendered HTML for the new task
                            const renderResponse = await window.api.get('/api/v1/tasks/' + taskId + '/render');

                            if (renderResponse.ok) {
                                const renderData = await renderResponse.json();
                                if (renderData.success && renderData.data.html) {
                                    // Create wrapper and parse HTML
                                    const wrapper = document.createElement('div');
                                    wrapper.innerHTML = renderData.data.html.trim();
                                    const taskElement = wrapper.firstElementChild;

                                    // Add fade-in animation styles
                                    taskElement.style.opacity = '0';
                                    taskElement.style.transform = 'translateY(-10px)';
                                    taskElement.style.transition = 'opacity 0.3s ease, transform 0.3s ease';

                                    // Prepend to task list
                                    taskList.prepend(taskElement);

                                    // Trigger animation on next frame
                                    requestAnimationFrame(() => {
                                        taskElement.style.opacity = '1';
                                        taskElement.style.transform = 'translateY(0)';
                                    });

                                    // Hide empty state if visible
                                    if (emptyState) {
                                        emptyState.style.display = 'none';
                                    }

                                    // Show success toast
                                    if (result.data.undoToken && window.showToastWithUndo) {
                                        window.showToastWithUndo('Created: ' + taskTitle, 'success', result.data.undoToken);
                                    } else if (window.showToast) {
                                        window.showToast('Created: ' + taskTitle, 'success');
                                    }
                                    return; // Success - no reload needed
                                }
                            }
                        } catch (renderError) {
                            console.warn('Failed to render task, falling back to reload:', renderError);
                        }
                    }

                    // Fallback: reload page if AJAX insertion failed
                    if (window.showToast) {
                        window.showToast('Created: ' + taskTitle, 'success');
                    }
                    setTimeout(() => window.location.reload(), 300);
                }
            } catch (error) {
                console.error('Submit error:', error);
                this.errorMessage = error.message || 'Failed to create task. Please try again.';
                this.hasErrors = true;
            } finally {
                this.isSubmitting = false;
            }
        },

        clearInput() {
            this.inputText = '';
            this.parsedData = null;
            this.highlightedText = '';
            this.showAutocomplete = false;
            this.autocompleteItems = [];
            this.errorMessage = '';
            this.hasErrors = false;
            this.isRecurring = false;
            this.recurrenceRule = '';
            // Issue #37: Reset textarea height after clearing
            if (this.$refs.input) {
                this.$refs.input.style.height = 'auto';
                this.$refs.input.focus();
            }
        }
    };
}
