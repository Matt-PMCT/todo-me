{# Keyboard Help Modal Component #}
{# Shows available keyboard shortcuts in a modal dialog #}

<div x-data="{ open: false }"
     @keyboardHelp.window="open = true"
     @closeAll.window="open = false"
     @keydown.escape.window="open = false">

    {# Modal #}
    <div x-show="open"
         x-cloak
         class="fixed inset-0 z-50 overflow-y-auto"
         role="dialog"
         aria-modal="true"
         aria-labelledby="keyboard-help-title">

        {# Backdrop #}
        <div x-show="open"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             @click="open = false"
             class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
             aria-hidden="true"></div>

        {# Centering wrapper #}
        <div class="flex min-h-screen items-center justify-center p-4">

            {# Modal panel #}
            <div x-show="open"
                 x-transition:enter="ease-out duration-300"
                 x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave="ease-in duration-200"
                 x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                 x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                 class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">

                {# Header #}
                <div class="flex items-center justify-between border-b border-gray-200 pb-4">
                    <h2 id="keyboard-help-title" class="text-lg font-semibold text-gray-900">
                        Keyboard Shortcuts
                    </h2>
                    <button @click="open = false"
                            type="button"
                            class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        <span class="sr-only">Close</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>

                {# Shortcuts table #}
                <div class="mt-4 space-y-6">

                    {# Navigation shortcuts #}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-3">Navigation</h3>
                        <table class="w-full">
                            <tbody class="divide-y divide-gray-100">
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">/</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Focus search</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">j</kbd>
                                        <span class="text-gray-400 mx-1">or</span>
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Down</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Next task</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">k</kbd>
                                        <span class="text-gray-400 mx-1">or</span>
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Up</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Previous task</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Enter</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Open selected task</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    {# Task actions #}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-3">Task Actions</h3>
                        <table class="w-full">
                            <tbody class="divide-y divide-gray-100">
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Ctrl</kbd>
                                        <span class="text-gray-400 mx-0.5">+</span>
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">K</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Focus quick add</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Ctrl</kbd>
                                        <span class="text-gray-400 mx-0.5">+</span>
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Enter</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Submit quick add</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Ctrl</kbd>
                                        <span class="text-gray-400 mx-0.5">+</span>
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Z</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Undo last action</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    {# General #}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-3">General</h3>
                        <table class="w-full">
                            <tbody class="divide-y divide-gray-100">
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">?</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Show this help</td>
                                </tr>
                                <tr>
                                    <td class="py-2 pr-4">
                                        <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600">Esc</kbd>
                                    </td>
                                    <td class="py-2 text-sm text-gray-700">Close modal / dropdown</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

                {# Footer note #}
                <div class="mt-6 pt-4 border-t border-gray-200">
                    <p class="text-xs text-gray-500">
                        On macOS, use <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-1.5 py-0.5 text-xs font-medium text-gray-600">Cmd</kbd> instead of <kbd class="inline-flex items-center rounded border border-gray-200 bg-gray-50 px-1.5 py-0.5 text-xs font-medium text-gray-600">Ctrl</kbd>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
