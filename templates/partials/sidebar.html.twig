{#
  Sidebar Partial

  Contains:
  - Project tree
  - Quick navigation views
  - Tags section

  Variables passed from parent:
  - projects: array - Project tree data
  - selectedProjectId: string|null - Currently selected project
  - tags: array - User's tags
#}

{# Mobile backdrop overlay #}
<div x-show="$store.sidebar.open"
     x-cloak
     @click="$store.sidebar.open = false"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-30 bg-gray-500/75 md:hidden"
     aria-hidden="true"></div>

{# Sidebar #}
<aside class="fixed inset-y-0 left-0 z-40 w-64 bg-white border-r border-gray-200 overflow-y-auto
              transform transition-transform duration-300 ease-in-out
              -translate-x-full
              md:relative md:translate-x-0 md:z-auto md:flex-shrink-0"
       :class="{ 'translate-x-0 md:translate-x-0': $store.sidebar.open }"
       @keydown.escape.window="$store.sidebar.open = false">

    {# Mobile close button #}
    <div class="flex items-center justify-between p-4 border-b border-gray-200 md:hidden">
        <span class="text-sm font-semibold text-gray-900">Navigation</span>
        <button @click="$store.sidebar.open = false"
                type="button"
                class="min-h-11 min-w-11 inline-flex items-center justify-center rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
            <span class="sr-only">Close sidebar</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <div class="py-4">

        {# Views Section #}
        <div class="px-3 mb-4">
            <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Views</h3>
            <nav class="space-y-1">
                <a href="{{ path('app_task_list') }}"
                   class="min-h-11 sm:min-h-0 flex items-center gap-3 px-3 py-2 text-sm rounded-md
                          {{ app.request.attributes.get('_route') == 'app_task_list' and not app.request.query.get('filter') ? 'bg-indigo-50 text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50' }}">
                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                    All Tasks
                </a>

                <a href="{{ path('app_task_list', { filter: 'today' }) }}"
                   class="min-h-11 sm:min-h-0 flex items-center gap-3 px-3 py-2 text-sm rounded-md
                          {{ app.request.query.get('filter') == 'today' ? 'bg-indigo-50 text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50' }}">
                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Today
                </a>

                <a href="{{ path('app_task_list', { filter: 'upcoming' }) }}"
                   class="min-h-11 sm:min-h-0 flex items-center gap-3 px-3 py-2 text-sm rounded-md
                          {{ app.request.query.get('filter') == 'upcoming' ? 'bg-indigo-50 text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50' }}">
                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                    </svg>
                    Upcoming
                </a>

                <a href="{{ path('app_task_list', { filter: 'overdue' }) }}"
                   class="min-h-11 sm:min-h-0 flex items-center gap-3 px-3 py-2 text-sm rounded-md
                          {{ app.request.query.get('filter') == 'overdue' ? 'bg-red-50 text-red-700 font-medium' : 'text-gray-700 hover:bg-gray-50' }}">
                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Overdue
                </a>
            </nav>
        </div>

        {# Divider #}
        <hr class="border-gray-200 mx-3 my-4">

        {# Projects Section #}
        {% include 'components/project-tree.html.twig' with {
            projects: projects|default([]),
            selectedProjectId: selectedProjectId|default(null),
            showArchived: false
        } %}

        {# Divider #}
        <hr class="border-gray-200 mx-3 my-4">

        {# Tags Section #}
        <div class="px-3">
            <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Tags</h3>
            <nav class="space-y-1">
                {% for tag in tags|default([]) %}
                <a href="{{ path('app_task_list', { tag: tag.id }) }}"
                   class="min-h-11 sm:min-h-0 flex items-center gap-2 px-3 py-2 text-sm rounded-md
                          {{ app.request.query.get('tag') == tag.id ? 'bg-indigo-50 text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50' }}">
                    <span class="w-2 h-2 rounded-full" style="background-color: {{ tag.color }}"></span>
                    <span class="truncate">{{ tag.name }}</span>
                </a>
                {% else %}
                <p class="px-3 py-2 text-sm text-gray-500">No tags yet</p>
                {% endfor %}
            </nav>
        </div>

    </div>
</aside>
