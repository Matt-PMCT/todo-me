<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Todo App{% endblock %}</title>

    <!-- Tailwind CSS (compiled locally) -->
    <link rel="stylesheet" href="{{ asset('build/tailwind.css') }}">

    {% block stylesheets %}{% endblock %}

    <!-- Base path for JavaScript API calls -->
    <script>
        window.APP_BASE_PATH = '{{ app.request.basePath }}';
        window.apiUrl = function(path) { return (window.APP_BASE_PATH || '') + path; };
    </script>
</head>
<body class="h-full">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-indigo-600" x-data="{ mobileMenuOpen: false, userMenuOpen: false }" @closeAll.window="userMenuOpen = false; mobileMenuOpen = false">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <a href="{{ path('app_task_list') }}" class="text-white font-bold text-xl">
                                Todo App
                            </a>
                        </div>
                        {% if app.user %}
                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-4">
                                <a href="{{ path('app_task_list') }}" class="{% if app.request.attributes.get('_route') == 'app_task_list' %}bg-indigo-700 text-white{% else %}text-indigo-100 hover:bg-indigo-500 hover:text-white{% endif %} rounded-md px-3 py-2 text-sm font-medium">
                                    Tasks
                                </a>
                            </div>
                        </div>
                        <div class="hidden md:block ml-4 flex-1 max-w-md">
                            {% include 'components/search-input.html.twig' %}
                        </div>
                        {% endif %}
                    </div>

                    {% if app.user %}
                    <div class="hidden md:block">
                        <div class="ml-4 flex items-center md:ml-6">
                            <!-- Notification dropdown -->
                            {% include 'components/notification-dropdown.html.twig' with { apiToken: app.user.apiToken } %}

                            <!-- User dropdown -->
                            <div class="relative ml-3">
                                <div>
                                    <button @click="userMenuOpen = !userMenuOpen" type="button" class="flex max-w-xs items-center rounded-full bg-indigo-600 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600" id="user-menu-button">
                                        <span class="sr-only">Open user menu</span>
                                        <div class="h-8 w-8 rounded-full bg-indigo-400 flex items-center justify-center">
                                            <span class="text-white text-sm font-medium">{{ app.user.email|first|upper }}</span>
                                        </div>
                                    </button>
                                </div>
                                <div x-show="userMenuOpen"
                                     x-cloak
                                     @click.away="userMenuOpen = false"
                                     x-transition:enter="transition ease-out duration-100"
                                     x-transition:enter-start="transform opacity-0 scale-95"
                                     x-transition:enter-end="transform opacity-100 scale-100"
                                     x-transition:leave="transition ease-in duration-75"
                                     x-transition:leave-start="transform opacity-100 scale-100"
                                     x-transition:leave-end="transform opacity-0 scale-95"
                                     class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                                    <div class="px-4 py-2 text-sm text-gray-700 border-b">
                                        {{ app.user.email }}
                                    </div>
                                    <a href="{{ path('app_notifications') }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                                        </svg>
                                        Notifications
                                    </a>
                                    <a href="{{ path('app_settings_notifications') }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        Settings
                                    </a>
                                    <div class="border-t border-gray-100"></div>
                                    <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sign out</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="hidden md:block">
                        <div class="ml-4 flex items-center space-x-4">
                            <a href="{{ path('app_login') }}" class="text-indigo-100 hover:text-white text-sm font-medium">Sign in</a>
                            <a href="{{ path('app_register') }}" class="bg-white text-indigo-600 hover:bg-indigo-50 rounded-md px-3 py-2 text-sm font-medium">Register</a>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Mobile menu buttons -->
                    <div class="-mr-2 flex items-center gap-2 md:hidden">
                        {% if app.user %}
                        {# Sidebar toggle button (only for authenticated users) #}
                        <button @click="$store.sidebar.toggle()" type="button" class="min-h-11 min-w-11 inline-flex items-center justify-center rounded-md bg-indigo-600 p-2 text-indigo-200 hover:bg-indigo-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600">
                            <span class="sr-only">Open sidebar</span>
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            </svg>
                        </button>
                        {% endif %}
                        {# User menu toggle button #}
                        <button @click="mobileMenuOpen = !mobileMenuOpen" type="button" class="min-h-11 min-w-11 inline-flex items-center justify-center rounded-md bg-indigo-600 p-2 text-indigo-200 hover:bg-indigo-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600">
                            <span class="sr-only">Open user menu</span>
                            <svg class="h-6 w-6" :class="{ 'hidden': mobileMenuOpen, 'block': !mobileMenuOpen }" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                            </svg>
                            <svg class="h-6 w-6" :class="{ 'block': mobileMenuOpen, 'hidden': !mobileMenuOpen }" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile menu -->
            <div class="md:hidden" x-show="mobileMenuOpen" x-cloak>
                {% if app.user %}
                <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
                    <a href="{{ path('app_task_list') }}" class="{% if app.request.attributes.get('_route') == 'app_task_list' %}bg-indigo-700 text-white{% else %}text-indigo-100 hover:bg-indigo-500 hover:text-white{% endif %} block rounded-md px-3 py-2 text-base font-medium">Tasks</a>
                </div>
                <div class="border-t border-indigo-700 pb-3 pt-4">
                    <div class="flex items-center px-5">
                        <div class="flex-shrink-0">
                            <div class="h-10 w-10 rounded-full bg-indigo-400 flex items-center justify-center">
                                <span class="text-white text-lg font-medium">{{ app.user.email|first|upper }}</span>
                            </div>
                        </div>
                        <div class="ml-3">
                            <div class="text-base font-medium text-white">{{ app.user.email }}</div>
                        </div>
                    </div>
                    <div class="mt-3 space-y-1 px-2">
                        <a href="{{ path('app_notifications') }}" class="flex items-center gap-2 rounded-md px-3 py-2 text-base font-medium text-indigo-200 hover:bg-indigo-500 hover:text-white">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                            </svg>
                            Notifications
                        </a>
                        <a href="{{ path('app_settings_notifications') }}" class="flex items-center gap-2 rounded-md px-3 py-2 text-base font-medium text-indigo-200 hover:bg-indigo-500 hover:text-white">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Settings
                        </a>
                        <a href="{{ path('app_logout') }}" class="block rounded-md px-3 py-2 text-base font-medium text-indigo-200 hover:bg-indigo-500 hover:text-white">Sign out</a>
                    </div>
                </div>
                {% else %}
                <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
                    <a href="{{ path('app_login') }}" class="text-indigo-100 hover:bg-indigo-500 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Sign in</a>
                    <a href="{{ path('app_register') }}" class="text-indigo-100 hover:bg-indigo-500 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Register</a>
                </div>
                {% endif %}
            </div>
        </nav>

        <!-- Flash messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 5000)" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="rounded-md p-4 {% if label == 'success' %}bg-green-50{% elseif label == 'error' %}bg-red-50{% elseif label == 'warning' %}bg-yellow-50{% else %}bg-blue-50{% endif %}">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                {% if label == 'success' %}
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                                </svg>
                                {% elseif label == 'error' %}
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                </svg>
                                {% elseif label == 'warning' %}
                                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                </svg>
                                {% else %}
                                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
                                </svg>
                                {% endif %}
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium {% if label == 'success' %}text-green-800{% elseif label == 'error' %}text-red-800{% elseif label == 'warning' %}text-yellow-800{% else %}text-blue-800{% endif %}">
                                    {{ message }}
                                </p>
                            </div>
                            <div class="ml-auto pl-3">
                                <div class="-mx-1.5 -my-1.5">
                                    <button @click="show = false" type="button" class="inline-flex rounded-md p-1.5 {% if label == 'success' %}bg-green-50 text-green-500 hover:bg-green-100{% elseif label == 'error' %}bg-red-50 text-red-500 hover:bg-red-100{% elseif label == 'warning' %}bg-yellow-50 text-yellow-500 hover:bg-yellow-100{% else %}bg-blue-50 text-blue-500 hover:bg-blue-100{% endif %} focus:outline-none focus:ring-2 focus:ring-offset-2 {% if label == 'success' %}focus:ring-green-600 focus:ring-offset-green-50{% elseif label == 'error' %}focus:ring-red-600 focus:ring-offset-red-50{% elseif label == 'warning' %}focus:ring-yellow-600 focus:ring-offset-yellow-50{% else %}focus:ring-blue-600 focus:ring-offset-blue-50{% endif %}">
                                        <span class="sr-only">Dismiss</span>
                                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Toast notifications container for JavaScript-triggered notifications -->
        <div x-data class="fixed top-4 right-4 z-50 space-y-2 max-w-sm w-full pointer-events-none">
            <template x-for="toast in $store.toasts.items" :key="toast.id">
                <div x-show="toast.show"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0 transform translate-x-4"
                     x-transition:enter-end="opacity-100 transform translate-x-0"
                     x-transition:leave="transition ease-in duration-200"
                     x-transition:leave-start="opacity-100 transform translate-x-0"
                     x-transition:leave-end="opacity-0 transform translate-x-4"
                     class="pointer-events-auto rounded-md p-4 shadow-lg"
                     :class="{
                         'bg-green-50': toast.type === 'success',
                         'bg-red-50': toast.type === 'error',
                         'bg-yellow-50': toast.type === 'warning',
                         'bg-blue-50': toast.type === 'info'
                     }">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <template x-if="toast.type === 'success'">
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                                </svg>
                            </template>
                            <template x-if="toast.type === 'error'">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                </svg>
                            </template>
                            <template x-if="toast.type === 'warning'">
                                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                </svg>
                            </template>
                            <template x-if="toast.type === 'info'">
                                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
                                </svg>
                            </template>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm font-medium"
                               :class="{
                                   'text-green-800': toast.type === 'success',
                                   'text-red-800': toast.type === 'error',
                                   'text-yellow-800': toast.type === 'warning',
                                   'text-blue-800': toast.type === 'info'
                               }"
                               x-text="toast.message"></p>
                        </div>
                        <!-- Undo button with countdown -->
                        <template x-if="toast.undoToken && !toast.undone">
                            <div class="ml-2 flex items-center space-x-2">
                                <button @click="$store.toasts.undo(toast.id)"
                                        :disabled="toast.undoing"
                                        type="button"
                                        class="text-sm font-medium underline hover:no-underline focus:outline-none"
                                        :class="{
                                            'text-green-700 hover:text-green-600': toast.type === 'success',
                                            'text-red-700 hover:text-red-600': toast.type === 'error',
                                            'text-yellow-700 hover:text-yellow-600': toast.type === 'warning',
                                            'text-blue-700 hover:text-blue-600': toast.type === 'info',
                                            'opacity-50 cursor-not-allowed': toast.undoing
                                        }">
                                    <span x-text="toast.undoing ? 'Undoing...' : 'Undo'"></span>
                                    <span x-show="toast.countdown > 0 && !toast.undoing" class="ml-1 text-xs opacity-75" x-text="'(' + toast.countdown + ')'"></span>
                                </button>
                            </div>
                        </template>
                        <div class="ml-4 flex-shrink-0">
                            <button @click="$store.toasts.dismiss(toast.id)"
                                    type="button"
                                    class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2"
                                    :class="{
                                        'bg-green-50 text-green-500 hover:bg-green-100 focus:ring-green-600 focus:ring-offset-green-50': toast.type === 'success',
                                        'bg-red-50 text-red-500 hover:bg-red-100 focus:ring-red-600 focus:ring-offset-red-50': toast.type === 'error',
                                        'bg-yellow-50 text-yellow-500 hover:bg-yellow-100 focus:ring-yellow-600 focus:ring-offset-yellow-50': toast.type === 'warning',
                                        'bg-blue-50 text-blue-500 hover:bg-blue-100 focus:ring-blue-600 focus:ring-offset-blue-50': toast.type === 'info'
                                    }">
                                <span class="sr-only">Dismiss</span>
                                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </template>
        </div>

        <!-- Main content -->
        <main>
            {% block main_content %}
            {% if app.user and block('use_sidebar') is defined and block('use_sidebar')|trim == 'true' %}
            <div class="flex">
                {% block sidebar %}
                    {% include 'partials/sidebar.html.twig' with {
                        projects: sidebar_projects|default([]),
                        selectedProjectId: selected_project_id|default(null),
                        tags: sidebar_tags|default([])
                    } %}
                {% endblock %}
                <div class="flex-1 min-w-0">
                    {% block body %}{% endblock %}
                </div>
            </div>
            {% else %}
                {{ block('body') }}
            {% endif %}
            {% endblock %}
        </main>

        <!-- Footer (hidden on mobile when logged in to make room for bottom nav) -->
        <footer class="bg-white border-t mt-auto {% if app.user %}hidden md:block{% endif %}">
            <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                <p class="text-center text-sm text-gray-500">
                    Todo App - A simple task management application
                </p>
            </div>
        </footer>

        {% if app.user %}
        <!-- Mobile bottom navigation (only on mobile) -->
        <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 z-40 safe-area-inset-bottom">
            <div class="grid grid-cols-4 h-16">
                {# Tasks #}
                <a href="{{ path('app_task_list') }}"
                   class="flex flex-col items-center justify-center gap-1 {% if app.request.attributes.get('_route') == 'app_task_list' %}text-indigo-600{% else %}text-gray-500 hover:text-indigo-600{% endif %}">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                    </svg>
                    <span class="text-xs font-medium">Tasks</span>
                </a>

                {# Add Task (quick add trigger) #}
                <button type="button"
                        @click="focusQuickAdd()"
                        x-data
                        x-on:click="$dispatch('focus-quick-add')"
                        class="flex flex-col items-center justify-center gap-1 text-gray-500 hover:text-indigo-600">
                    <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center -mt-4 shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </div>
                    <span class="text-xs font-medium -mt-1">Add</span>
                </button>

                {# Notifications #}
                <a href="{{ path('app_notifications') }}"
                   class="flex flex-col items-center justify-center gap-1 {% if app.request.attributes.get('_route') == 'app_notifications' %}text-indigo-600{% else %}text-gray-500 hover:text-indigo-600{% endif %}">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                    </svg>
                    <span class="text-xs font-medium">Alerts</span>
                </a>

                {# Settings #}
                <a href="{{ path('app_settings_notifications') }}"
                   class="flex flex-col items-center justify-center gap-1 {% if 'app_settings' in app.request.attributes.get('_route') %}text-indigo-600{% else %}text-gray-500 hover:text-indigo-600{% endif %}">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span class="text-xs font-medium">Settings</span>
                </a>
            </div>
        </nav>

        {# Spacer for bottom navigation on mobile #}
        <div class="md:hidden h-16"></div>
        {% endif %}
    </div>

    <!-- Keyboard help modal -->
    {% include 'components/keyboard-help-modal.html.twig' %}

    {% block javascripts %}{% endblock %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
</body>
</html>
