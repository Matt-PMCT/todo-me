{% extends 'settings/layout.html.twig' %}

{% block settings_title %}Notifications{% endblock %}

{% block settings_content %}
{# This page redirects to the existing notification settings page content #}
{# We include the notification settings inline for consistency with the settings layout #}

{% set notificationSettings = app.user.notificationSettings %}

<div x-data="notificationSettings({{ notificationSettings|json_encode }})">
    {# Page header with save status #}
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                Notification Settings
            </h1>
            <p class="mt-1 text-sm text-gray-500">
                Manage how and when you receive notifications
            </p>
        </div>
        {# Save status indicator #}
        <div class="mt-4 sm:mt-0">
            <span x-show="saveStatus === 'saving'" class="inline-flex items-center gap-1 text-sm text-gray-500">
                <svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Saving...
            </span>
            <span x-show="saveStatus === 'saved'" x-cloak class="inline-flex items-center gap-1 text-sm text-green-600">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Saved
            </span>
            <span x-show="saveStatus === 'error'" x-cloak class="inline-flex items-center gap-1 text-sm text-red-600">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Error saving
            </span>
        </div>
    </div>

    <div class="space-y-6">
        {# Notification Channels #}
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h2 class="text-base font-semibold text-gray-900">Notification Channels</h2>
                <p class="mt-1 text-sm text-gray-500">Choose how you want to receive notifications</p>
            </div>
            <div class="px-4 py-5 sm:p-6 space-y-4">
                {# Email toggle #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="emailEnabled" class="text-sm font-medium text-gray-900">Email notifications</label>
                        <p class="text-sm text-gray-500">Receive notifications via email</p>
                    </div>
                    <button
                        type="button"
                        id="emailEnabled"
                        @click="toggleSetting('emailEnabled')"
                        :class="settings.emailEnabled ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.emailEnabled"
                    >
                        <span
                            :class="settings.emailEnabled ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>

                {# Push toggle #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="pushEnabled" class="text-sm font-medium text-gray-900">Push notifications</label>
                        <p class="text-sm text-gray-500">Receive browser push notifications</p>
                    </div>
                    <button
                        type="button"
                        id="pushEnabled"
                        @click="toggleSetting('pushEnabled')"
                        :class="settings.pushEnabled ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.pushEnabled"
                    >
                        <span
                            :class="settings.pushEnabled ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>
            </div>
        </div>

        {# Notification Types #}
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h2 class="text-base font-semibold text-gray-900">Notification Types</h2>
                <p class="mt-1 text-sm text-gray-500">Choose which events trigger notifications</p>
            </div>
            <div class="px-4 py-5 sm:p-6 space-y-4">
                {# Task due soon #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="taskDueSoon" class="text-sm font-medium text-gray-900">Task due soon</label>
                        <p class="text-sm text-gray-500">Get notified before a task is due</p>
                    </div>
                    <button
                        type="button"
                        id="taskDueSoon"
                        @click="toggleSetting('taskDueSoon')"
                        :class="settings.taskDueSoon ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.taskDueSoon"
                    >
                        <span
                            :class="settings.taskDueSoon ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>

                {# Task overdue #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="taskOverdue" class="text-sm font-medium text-gray-900">Task overdue</label>
                        <p class="text-sm text-gray-500">Get notified when a task becomes overdue</p>
                    </div>
                    <button
                        type="button"
                        id="taskOverdue"
                        @click="toggleSetting('taskOverdue')"
                        :class="settings.taskOverdue ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.taskOverdue"
                    >
                        <span
                            :class="settings.taskOverdue ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>

                {# Task due today #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="taskDueToday" class="text-sm font-medium text-gray-900">Task due today</label>
                        <p class="text-sm text-gray-500">Get a daily summary of tasks due today</p>
                    </div>
                    <button
                        type="button"
                        id="taskDueToday"
                        @click="toggleSetting('taskDueToday')"
                        :class="settings.taskDueToday ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.taskDueToday"
                    >
                        <span
                            :class="settings.taskDueToday ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>

                {# Recurring task created #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="recurringCreated" class="text-sm font-medium text-gray-900">Recurring task created</label>
                        <p class="text-sm text-gray-500">Get notified when a recurring task generates a new instance</p>
                    </div>
                    <button
                        type="button"
                        id="recurringCreated"
                        @click="toggleSetting('recurringCreated')"
                        :class="settings.recurringCreated ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.recurringCreated"
                    >
                        <span
                            :class="settings.recurringCreated ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>
            </div>
        </div>

        {# Reminder Timing #}
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h2 class="text-base font-semibold text-gray-900">Reminder Timing</h2>
                <p class="mt-1 text-sm text-gray-500">How far in advance to send due soon reminders</p>
            </div>
            <div class="px-4 py-5 sm:p-6">
                <div class="max-w-xs">
                    <label for="dueSoonHours" class="block text-sm font-medium text-gray-700">Remind me</label>
                    <select
                        id="dueSoonHours"
                        x-model="settings.dueSoonHours"
                        @change="saveSettings()"
                        class="mt-1 block w-full rounded-md border-0 py-2 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
                    >
                        <option value="1">1 hour before</option>
                        <option value="2">2 hours before</option>
                        <option value="4">4 hours before</option>
                        <option value="8">8 hours before</option>
                        <option value="12">12 hours before</option>
                        <option value="24">1 day before</option>
                        <option value="48">2 days before</option>
                    </select>
                </div>
            </div>
        </div>

        {# Quiet Hours #}
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h2 class="text-base font-semibold text-gray-900">Quiet Hours</h2>
                <p class="mt-1 text-sm text-gray-500">Don't send notifications during specific hours</p>
            </div>
            <div class="px-4 py-5 sm:p-6 space-y-4">
                {# Enable quiet hours #}
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <label for="quietHoursEnabled" class="text-sm font-medium text-gray-900">Enable quiet hours</label>
                        <p class="text-sm text-gray-500">Pause notifications during set times</p>
                    </div>
                    <button
                        type="button"
                        id="quietHoursEnabled"
                        @click="toggleSetting('quietHoursEnabled')"
                        :class="settings.quietHoursEnabled ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
                        role="switch"
                        :aria-checked="settings.quietHoursEnabled"
                    >
                        <span
                            :class="settings.quietHoursEnabled ? 'translate-x-5' : 'translate-x-0'"
                            class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"
                        ></span>
                    </button>
                </div>

                {# Time range #}
                <div x-show="settings.quietHoursEnabled" x-cloak class="grid grid-cols-2 gap-4 pt-2">
                    <div>
                        <label for="quietHoursStart" class="block text-sm font-medium text-gray-700">Start time</label>
                        <input
                            type="time"
                            id="quietHoursStart"
                            x-model="settings.quietHoursStart"
                            @change="saveSettings()"
                            class="mt-1 block w-full rounded-md border-0 py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
                        >
                    </div>
                    <div>
                        <label for="quietHoursEnd" class="block text-sm font-medium text-gray-700">End time</label>
                        <input
                            type="time"
                            id="quietHoursEnd"
                            x-model="settings.quietHoursEnd"
                            @change="saveSettings()"
                            class="mt-1 block w-full rounded-md border-0 py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6"
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function notificationSettings(initialSettings) {
    return {
        settings: initialSettings,
        saveStatus: null,
        saveTimeout: null,

        async toggleSetting(key) {
            this.settings[key] = !this.settings[key];
            await this.saveSettings();
        },

        async saveSettings() {
            // Clear any pending save
            if (this.saveTimeout) {
                clearTimeout(this.saveTimeout);
            }

            this.saveStatus = 'saving';

            try {
                const response = await fetch(window.apiUrl('/api/v1/notifications/preferences'), {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(this.settings)
                });

                if (response.ok) {
                    this.saveStatus = 'saved';
                    // Clear the saved status after 2 seconds
                    this.saveTimeout = setTimeout(() => {
                        this.saveStatus = null;
                    }, 2000);
                } else {
                    this.saveStatus = 'error';
                }
            } catch (error) {
                console.error('Failed to save settings:', error);
                this.saveStatus = 'error';
            }
        }
    };
}
</script>
{% endblock %}
