                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                        </svg>
                        <span class="truncate">Security</span>
                    </a>

                    <a href="{{ path('app_settings_notifications') }}"
                       class="{% if app.request.attributes.get('_route') == 'app_settings_notifications' %}bg-gray-50 dark:bg-gray-700 text-teal-700 dark:text-teal-400 hover:bg-white dark:hover:bg-gray-600 hover:text-teal-700{% else %}text-gray-900 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900{% endif %} group flex items-center rounded-md px-3 py-2 text-sm font-medium"
                       {% if app.request.attributes.get('_route') == 'app_settings_notifications' %}aria-current="page"{% endif %}>
