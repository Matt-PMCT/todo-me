    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
            {# Settings sidebar #}
            <aside class="px-2 py-6 sm:px-6 lg:col-span-3 lg:px-0 lg:py-0">
                <nav class="space-y-1">
                    <a href="{{ path('app_settings_profile') }}"
                       class="{% if app.request.attributes.get('_route') == 'app_settings_profile' %}bg-gray-50 dark:bg-gray-700 text-teal-700 dark:text-teal-400 hover:bg-white dark:hover:bg-gray-600 hover:text-teal-700{% else %}text-gray-900 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900{% endif %} group flex items-center rounded-md px-3 py-2 text-sm font-medium"
                       {% if app.request.attributes.get('_route') == 'app_settings_profile' %}aria-current="page"{% endif %}>
                        <svg class="{% if app.request.attributes.get('_route') == 'app_settings_profile' %}text-teal-500 dark:text-teal-400{% else %}text-gray-400 dark:text-gray-500 group-hover:text-gray-500 dark:group-hover:text-gray-400{% endif %} -ml-1 mr-3 h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                        </svg>
                        <span class="truncate">Profile</span>
                    </a>

                    <a href="{{ path('app_settings_security') }}"
                       class="{% if app.request.attributes.get('_route') == 'app_settings_security' %}bg-gray-50 dark:bg-gray-700 text-teal-700 dark:text-teal-400 hover:bg-white dark:hover:bg-gray-600 hover:text-teal-700{% else %}text-gray-900 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900{% endif %} group flex items-center rounded-md px-3 py-2 text-sm font-medium"
                       {% if app.request.attributes.get('_route') == 'app_settings_security' %}aria-current="page"{% endif %}>
