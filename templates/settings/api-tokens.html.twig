{% extends 'settings/layout.html.twig' %}

{% block settings_title %}API Tokens{% endblock %}

{% block settings_content %}
<div x-data="apiTokensManager()">
    {# Page header #}
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                API Tokens
            </h1>
            <p class="mt-1 text-sm text-gray-500">
                Manage API tokens for third-party applications
            </p>
        </div>
        <div class="mt-4 sm:mt-0">
            <button @click="openCreateModal()"
                    type="button"
                    class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Create Token
            </button>
        </div>
    </div>

    {# Tokens list #}
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h2 class="text-base font-semibold text-gray-900">Your API Tokens</h2>
            <p class="mt-1 text-sm text-gray-500">Tokens grant access to your account via the API</p>
        </div>

        {# Loading state #}
        <div x-show="loading" class="px-4 py-12 text-center">
            <svg class="mx-auto h-8 w-8 animate-spin text-gray-400" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="mt-2 text-sm text-gray-500">Loading tokens...</p>
        </div>

        {# Empty state #}
        <div x-show="!loading && tokens.length === 0" x-cloak class="px-4 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No API tokens</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by creating a new API token.</p>
            <div class="mt-6">
                <button @click="openCreateModal()"
                        type="button"
                        class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Create Token
                </button>
            </div>
        </div>

        {# Tokens table #}
        <div x-show="!loading && tokens.length > 0" x-cloak>
            <ul role="list" class="divide-y divide-gray-200">
                <template x-for="token in tokens" :key="token.id">
                    <li class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <p class="text-sm font-medium text-gray-900 truncate" x-text="token.name"></p>
                                    <span x-show="token.isExpired" class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">
                                        Expired
                                    </span>
                                </div>
                                <div class="mt-1 flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-gray-500">
                                    <span class="font-mono text-xs bg-gray-100 px-1.5 py-0.5 rounded" x-text="token.tokenPrefix + '...'"></span>
                                    <span>Created: <span x-text="formatDate(token.createdAt)"></span></span>
                                    <span x-show="token.lastUsedAt">Last used: <span x-text="formatDate(token.lastUsedAt)"></span></span>
                                    <span x-show="token.expiresAt">Expires: <span x-text="formatDate(token.expiresAt)"></span></span>
                                </div>
                                <div x-show="token.scopes && token.scopes.length > 0" class="mt-2 flex flex-wrap gap-1">
                                    <template x-for="scope in token.scopes" :key="scope">
                                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600" x-text="scope === '*' ? 'Full Access' : scope"></span>
                                    </template>
                                </div>
                            </div>
                            <div class="ml-4">
                                <button @click="revokeToken(token.id)"
                                        :disabled="revoking === token.id"
                                        type="button"
                                        class="inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <span x-show="revoking !== token.id">Revoke</span>
                                    <span x-show="revoking === token.id">Revoking...</span>
                                </button>
                            </div>
                        </div>
                    </li>
                </template>
            </ul>
        </div>
    </div>

    {# Info box #}
    <div class="mt-6 rounded-md bg-blue-50 p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">About API Tokens</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <p>API tokens allow third-party applications to access your account. Keep your tokens secure and never share them publicly.</p>
                    <p class="mt-2">Use the <code class="bg-blue-100 px-1 py-0.5 rounded">Authorization: Bearer &lt;token&gt;</code> header or <code class="bg-blue-100 px-1 py-0.5 rounded">X-API-Key: &lt;token&gt;</code> header in your API requests.</p>
                </div>
            </div>
        </div>
    </div>

    {# Create token modal #}
    <div x-show="showCreateModal" x-cloak
         class="relative z-50"
         aria-labelledby="modal-title"
         role="dialog"
         aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6"
                     x-transition:enter="ease-out duration-300"
                     x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                     x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                     x-transition:leave="ease-in duration-200"
                     x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                     x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                     @click.away="closeCreateModal()">

                    {# Create form #}
                    <div x-show="!createdToken">
                        <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-indigo-100">
                            <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-5">
                            <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Create API Token</h3>
                            <p class="mt-2 text-sm text-gray-500">
                                Create a new API token for accessing your account via the API.
                            </p>
                        </div>

                        <form @submit.prevent="createToken()" class="mt-6 space-y-4">
                            {# Token name #}
                            <div>
                                <label for="token-name" class="block text-sm font-medium leading-6 text-gray-900">Token Name</label>
                                <div class="mt-2">
                                    <input type="text"
                                           id="token-name"
                                           x-model="newToken.name"
                                           required
                                           maxlength="100"
                                           placeholder="My CI Token"
                                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                </div>
                                <p class="mt-1 text-xs text-gray-500">A descriptive name to identify this token</p>
                            </div>

                            {# Expiration #}
                            <div>
                                <label for="token-expires" class="block text-sm font-medium leading-6 text-gray-900">Expiration (Optional)</label>
                                <div class="mt-2">
                                    <input type="date"
                                           id="token-expires"
                                           x-model="newToken.expiresAt"
                                           :min="minExpirationDate"
                                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                </div>
                                <p class="mt-1 text-xs text-gray-500">Leave empty for no expiration</p>
                            </div>

                            {# Error message #}
                            <div x-show="createError" x-cloak class="rounded-md bg-red-50 p-3">
                                <p class="text-sm text-red-700" x-text="createError"></p>
                            </div>

                            {# Buttons #}
                            <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
                                <button type="submit"
                                        :disabled="creating"
                                        class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:opacity-50 disabled:cursor-not-allowed sm:col-start-2">
                                    <span x-show="!creating">Create Token</span>
                                    <span x-show="creating">Creating...</span>
                                </button>
                                <button type="button"
                                        @click="closeCreateModal()"
                                        :disabled="creating"
                                        class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed sm:col-start-1 sm:mt-0">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>

                    {# Token created success #}
                    <div x-show="createdToken" x-cloak>
                        <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-green-100">
                            <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-5">
                            <h3 class="text-base font-semibold leading-6 text-gray-900">Token Created Successfully</h3>
                            <p class="mt-2 text-sm text-gray-500">
                                Copy this token now. You won't be able to see it again!
                            </p>
                        </div>

                        <div class="mt-4">
                            <div class="rounded-md bg-gray-50 p-4">
                                <div class="flex items-center justify-between gap-4">
                                    <code class="text-sm font-mono text-gray-900 break-all" x-text="createdToken"></code>
                                    <button type="button"
                                            @click="copyToken()"
                                            class="flex-shrink-0 inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                                        <svg x-show="!copied" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
                                        </svg>
                                        <svg x-show="copied" x-cloak class="h-4 w-4 mr-1 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                        </svg>
                                        <span x-text="copied ? 'Copied!' : 'Copy'"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="mt-3 rounded-md bg-yellow-50 p-3">
                                <div class="flex">
                                    <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                    </svg>
                                    <p class="ml-3 text-sm text-yellow-700">
                                        Make sure to copy this token now. For security reasons, it cannot be displayed again.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5 sm:mt-6">
                            <button type="button"
                                    @click="closeCreateModal()"
                                    class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                Done
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function apiTokensManager() {
    return {
        tokens: [],
        loading: true,
        showCreateModal: false,
        revoking: null,
        creating: false,
        createError: null,
        createdToken: null,
        copied: false,
        newToken: {
            name: '',
            expiresAt: ''
        },

        get minExpirationDate() {
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            return tomorrow.toISOString().split('T')[0];
        },

        async init() {
            await this.loadTokens();
        },

        async loadTokens() {
            this.loading = true;
            try {
                const response = await fetch('/api/v1/users/me/tokens', {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                    },
                    credentials: 'same-origin',
                });

                if (response.ok) {
                    const data = await response.json();
                    this.tokens = data.data || [];
                } else if (response.status === 404) {
                    this.tokens = [];
                }
            } catch (error) {
                console.error('Failed to load tokens:', error);
                this.tokens = [];
            } finally {
                this.loading = false;
            }
        },

        openCreateModal() {
            this.showCreateModal = true;
            this.createdToken = null;
            this.createError = null;
            this.copied = false;
            this.newToken = { name: '', expiresAt: '' };
        },

        closeCreateModal() {
            this.showCreateModal = false;
            this.createdToken = null;
            this.createError = null;
            this.newToken = { name: '', expiresAt: '' };
        },

        async createToken() {
            if (!this.newToken.name.trim()) {
                this.createError = 'Token name is required';
                return;
            }

            this.creating = true;
            this.createError = null;

            try {
                const body = {
                    name: this.newToken.name.trim()
                };

                if (this.newToken.expiresAt) {
                    body.expiresAt = new Date(this.newToken.expiresAt).toISOString();
                }

                const response = await fetch('/api/v1/users/me/tokens', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(body),
                });

                const data = await response.json();

                if (response.ok) {
                    this.createdToken = data.data.plainToken;
                    await this.loadTokens();
                } else {
                    this.createError = data.error?.message || 'Failed to create token';
                }
            } catch (error) {
                console.error('Failed to create token:', error);
                this.createError = 'Failed to create token. Please try again.';
            } finally {
                this.creating = false;
            }
        },

        async copyToken() {
            if (!this.createdToken) return;

            try {
                await navigator.clipboard.writeText(this.createdToken);
                this.copied = true;
                setTimeout(() => { this.copied = false; }, 2000);
            } catch (error) {
                console.error('Failed to copy token:', error);
            }
        },

        async revokeToken(tokenId) {
            if (!confirm('Are you sure you want to revoke this token? This action cannot be undone.')) {
                return;
            }

            this.revoking = tokenId;
            try {
                const response = await fetch(`/api/v1/users/me/tokens/${tokenId}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json',
                    },
                    credentials: 'same-origin',
                });

                if (response.ok || response.status === 204) {
                    this.tokens = this.tokens.filter(t => t.id !== tokenId);
                } else {
                    alert('Failed to revoke token. Please try again.');
                }
            } catch (error) {
                console.error('Failed to revoke token:', error);
                alert('Failed to revoke token. Please try again.');
            } finally {
                this.revoking = null;
            }
        },

        formatDate(dateString) {
            if (!dateString) return 'Never';
            const date = new Date(dateString);
            return date.toLocaleDateString(undefined, {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
            });
        }
    };
}
</script>
{% endblock %}
