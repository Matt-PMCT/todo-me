{% extends 'base.html.twig' %}

{% block title %}No Due Date - Todo App{% endblock %}

{% block use_sidebar %}true{% endblock %}

{% block body %}
<div class="py-10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        {# Page header #}
        <div class="sm:flex sm:items-center sm:justify-between">
            <div>
                <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                    No Due Date
                </h1>
                <p class="mt-1 text-sm text-gray-500">
                    {% if tasks|length > 0 %}
                        {{ tasks|length }} task{% if tasks|length != 1 %}s{% endif %} without a due date
                    {% else %}
                        All tasks have due dates
                    {% endif %}
                </p>
            </div>
        </div>

        {# Task list #}
        <div class="mt-6">
            {% if tasks|length > 0 %}
                <div class="space-y-3">
                    {% for task in tasks %}
                        {{ include('task/_task_item.html.twig', {task: task}) }}
                    {% endfor %}
                </div>
            {% else %}
                {# Empty state #}
                <div class="text-center py-12 bg-white rounded-lg shadow">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900">All tasks scheduled</h3>
                    <p class="mt-1 text-sm text-gray-500">All your tasks have due dates assigned.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
