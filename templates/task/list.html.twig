{% extends 'base.html.twig' %}

{% block title %}My Tasks - Todo App{% endblock %}

{% block body %}
<div class="py-10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        {# Page header #}
        <div class="sm:flex sm:items-center sm:justify-between">
            <div>
                <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                    My Tasks
                </h1>
                <p class="mt-1 text-sm text-gray-500">
                    {% if tasks|length > 0 %}
                        You have {{ tasks|length }} task{% if tasks|length != 1 %}s{% endif %}
                    {% else %}
                        No tasks yet
                    {% endif %}
                </p>
            </div>
        </div>

        {# Quick add task form #}
        <div class="mt-6">
            <form action="{{ path('app_task_create') }}" method="POST" class="flex gap-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('create_task') }}">
                <div class="flex-1">
                    <label for="title" class="sr-only">Task title</label>
                    <input type="text"
                           name="title"
                           id="title"
                           required
                           placeholder="What needs to be done?"
                           class="block w-full rounded-md border-0 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-3">
                </div>
                <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Task
                </button>
            </form>
        </div>

        {# Filters #}
        <div class="mt-6 bg-white shadow rounded-lg p-4" x-data="{ showFilters: false }">
            <div class="flex items-center justify-between">
                <button @click="showFilters = !showFilters" type="button" class="inline-flex items-center gap-2 text-sm font-medium text-gray-700 hover:text-gray-900">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                    </svg>
                    Filters
                    <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': showFilters }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                {% if currentFilters.status or currentFilters.priority or currentFilters.projectId %}
                    <a href="{{ path('app_task_list') }}" class="text-sm text-indigo-600 hover:text-indigo-500">Clear filters</a>
                {% endif %}
            </div>

            <div x-show="showFilters" x-cloak x-transition class="mt-4 border-t pt-4">
                <form action="{{ path('app_task_list') }}" method="GET" class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
                    {# Status filter #}
                    <div>
                        <label for="filter_status" class="block text-sm font-medium text-gray-700">Status</label>
                        <select name="status" id="filter_status" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            <option value="">All statuses</option>
                            <option value="pending" {% if currentFilters.status == 'pending' %}selected{% endif %}>Pending</option>
                            <option value="in_progress" {% if currentFilters.status == 'in_progress' %}selected{% endif %}>In Progress</option>
                            <option value="completed" {% if currentFilters.status == 'completed' %}selected{% endif %}>Completed</option>
                        </select>
                    </div>

                    {# Priority filter #}
                    <div>
                        <label for="filter_priority" class="block text-sm font-medium text-gray-700">Priority</label>
                        <select name="priority" id="filter_priority" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            <option value="">All priorities</option>
                            {% for i in 1..5 %}
                                <option value="{{ i }}" {% if currentFilters.priority == i %}selected{% endif %}>{{ i }} star{% if i != 1 %}s{% endif %}</option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Project filter #}
                    <div>
                        <label for="filter_project" class="block text-sm font-medium text-gray-700">Project</label>
                        <select name="projectId" id="filter_project" class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            <option value="">All projects</option>
                            {% for project in projects %}
                                <option value="{{ project.id }}" {% if currentFilters.projectId == project.id %}selected{% endif %}>{{ project.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Apply button #}
                    <div class="flex items-end">
                        <button type="submit" class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {# Task list #}
        <div class="mt-6">
            {% if tasks|length > 0 %}
                {# Group by project toggle #}
                <div class="mb-4 flex items-center justify-end">
                    <form action="{{ path('app_task_list') }}" method="GET" class="inline-flex items-center">
                        {# Preserve existing filters #}
                        {% if currentFilters.status %}
                            <input type="hidden" name="status" value="{{ currentFilters.status }}">
                        {% endif %}
                        {% if currentFilters.priority %}
                            <input type="hidden" name="priority" value="{{ currentFilters.priority }}">
                        {% endif %}
                        {% if currentFilters.projectId %}
                            <input type="hidden" name="projectId" value="{{ currentFilters.projectId }}">
                        {% endif %}

                        <label class="inline-flex items-center cursor-pointer">
                            <input type="checkbox"
                                   name="groupByProject"
                                   value="1"
                                   {% if groupByProject %}checked{% endif %}
                                   onchange="this.form.submit()"
                                   class="sr-only peer">
                            <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                            <span class="ml-3 text-sm font-medium text-gray-700">Group by project</span>
                        </label>
                    </form>
                </div>

                {% if groupByProject %}
                    {# Grouped view #}
                    {% set groupedTasks = {} %}
                    {% for task in tasks %}
                        {% set projectKey = task.project ? task.project.id : 'no_project' %}
                        {% set projectName = task.project ? task.project.name : 'No Project' %}
                        {% if groupedTasks[projectKey] is not defined %}
                            {% set groupedTasks = groupedTasks|merge({(projectKey): {name: projectName, tasks: []}}) %}
                        {% endif %}
                        {% set groupedTasks = groupedTasks|merge({(projectKey): groupedTasks[projectKey]|merge({tasks: groupedTasks[projectKey].tasks|merge([task])})}) %}
                    {% endfor %}

                    <div class="space-y-8">
                        {% for projectId, group in groupedTasks %}
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                                    {% if projectId != 'no_project' %}
                                        <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                                        </svg>
                                    {% endif %}
                                    {{ group.name }}
                                    <span class="text-sm font-normal text-gray-500">({{ group.tasks|length }})</span>
                                </h3>
                                <div class="space-y-3">
                                    {% for task in group.tasks %}
                                        {{ include('task/_task_item.html.twig', {task: task}) }}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    {# Flat list view #}
                    <div class="space-y-3">
                        {% for task in tasks %}
                            {{ include('task/_task_item.html.twig', {task: task}) }}
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                {# Empty state #}
                <div class="text-center py-12 bg-white rounded-lg shadow">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900">No tasks</h3>
                    <p class="mt-1 text-sm text-gray-500">Get started by creating a new task.</p>
                    <div class="mt-6">
                        <button type="button" onclick="document.getElementById('title').focus()" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                            </svg>
                            New Task
                        </button>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
